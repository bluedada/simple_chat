<h1>Create Chatroom</h1>
<%= form_for @chatroom do |f| %>
	<% if @chatroom.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@chatroom.errors.count, "error") %> prevented this chatroom from saving:</h2>
			<ul>
				<% @chatroom.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<br>
	<%= f.submit %>
<% end %>